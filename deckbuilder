#!/usr/bin/env python3
"""
Deckbuilder CLI Entry Point

Standalone command-line interface for Deckbuilder presentation generation.
This script provides a convenient entry point for the CLI without needing
to invoke the Python module directly.
"""

import sys
from pathlib import Path

# Get the directory containing this script
script_dir = Path(__file__).parent.absolute()

# Add the src directory to Python path
src_dir = script_dir / "src"
sys.path.insert(0, str(src_dir))

# Import and run the CLI
try:
    from deckbuilder.cli import main

    main()
except ImportError as e:
    print(f"❌ Error importing Deckbuilder CLI: {e}")
    print("Make sure you're running from the Deckbuilder project directory")
    print("and that all dependencies are installed.")
    sys.exit(1)
except Exception as e:
    print(f"❌ Unexpected error: {e}")
    sys.exit(1)
